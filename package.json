{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node Typescript Boilerplate",
  "main": "server.js",
  "scripts": {
    "build": "tsc && tscpaths -p tsconfig.json -s ./src -o ./build",
    "dev": "nodemon",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "set NODE_ENV=production&& node ./build/server",
    "test": "jest --detectOpenHandles",
    "test: watch": "jest --watch --detectOpenHandles",
    "typecheck": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/B-Jones-RFD/node-typescript-starter.git"
  },
  "author": "Author",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/B-Jones-RFD/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/B-Jones-RFD/node-typescript-starter#readme",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "cors": "latest",
    "express": "latest",
    "express-status-monitor": "latest",
    "express-winston": "latest",
    "http-errors": "latest",
    "swagger-ui-express": "latest",
    "tiny-invariant": "latest",
    "winston": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/express-status-monitor": "latest",
    "@types/http-errors": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/supertest": "latest",
    "@types/swagger-ui-express": "latest",
    "dotenv": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "tscpaths": "latest",
    "typescript": "latest"
  }
}